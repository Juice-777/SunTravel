@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Edit";
}
<div class="container">
    <h2 class="title">Edit Role</h2>
</div>
<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        <div class="col-md-4">
            <label for="usr">Role name:</label>
            @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-md-4 col-md-offset-4">
            <input type="submit" name="action" value="Save" class="btn btn-lg btn-default btnBooking" />
        </div>
    }
</div>

